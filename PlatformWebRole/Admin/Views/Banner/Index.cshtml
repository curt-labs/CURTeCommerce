@{
    List<Admin.Banner> banners = ViewBag.banners;
    if(banners == null){
        banners = new List<Admin.Banner>();
    }
    
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="/Admin/Content/css/banner.manager.css" rel="stylesheet" type="text/css" />
<span class="title">Banner Management</span>
<a href="/Admin/Banner/Edit/0" title="Add New Banner" class="add">Add Banner</a>

<p>Drag and Drop to change display order.</p>
<ul class="banners">
@foreach (Admin.Banner banner in banners) {
    <li id="banner_@(banner.ID)">
        @if (banner.image.Length > 0) {
            <img src="@banner.image" class="banner" alt="@banner.title" />
        }
        <span class="bannerdetails">
            <span class="title">@banner.title</span>
            <span class="link"><strong>Link: </strong>@banner.link</span>
            <span class="visible"><string>Visible: </string>@((banner.isVisible == 1) ? "Yes" : "No")</span>
            <div class="btn-group">
                <a href="/Admin/Banner/Edit/@banner.ID" class="btn">Edit</a>
                <button class="btn dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <a href="/Admin/Banner/Delete/@banner.ID" data-id="@banner.ID" class="delete">Delete</a>
                    </li>
                </ul>
            </div>
        </span>
        <span class="clearfix"></span>
    </li>
}
</ul>
<script src="/Admin/Scripts/custom/banner.manager.js" type="text/javascript"></script>
