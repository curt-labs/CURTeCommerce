@{
    Admin.Theme theme = ViewBag.theme ?? new Admin.Theme();
    ViewBag.Title = "| Edit Theme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="/Admin/Content/css/admin_form.css" rel="stylesheet" type="text/css" />
<link href="/Admin/Content/css/themes.css" rel="stylesheet" type="text/css" />
@if (theme.ID == 0) {
    <span class="title">Add Theme</span>
} else {
    <span class="title">Edit Theme</span>
}

<form action="/Admin/Themes/Save/@theme.ID" method="post" class="admin_form">
    <label for="name">
        Name
        <input type="text" name="name" id="name" placeholder="Enter the name of this theme" value="@theme.name" required="required" title="Theme name is required" />
    </label>

    <label for="screenshot">
        Image
        <input type="text" name="screenshot" id="image" class="imagefield" value="@theme.screenshot" />
    </label>
    
    <input type="submit" name="btnSubmit" id="btnSubmit" value="Save" />
</form>
<script src="/Admin/Scripts/custom/themes.js" type="text/javascript"></script>
