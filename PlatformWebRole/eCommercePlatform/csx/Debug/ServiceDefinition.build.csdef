<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" name="eCommercePlatform" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition">
  <WebRole name="Admin" vmsize="ExtraSmall">
    <LocalResources>
      <LocalStorage name="DiagnosticStore" sizeInMB="4096" cleanOnRoleRecycle="false" />
    </LocalResources>
    <ConfigurationSettings>
      <Setting name="StorageConnectionString" />
    </ConfigurationSettings>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="8080" localPort="8080" />
    </Endpoints>
    <Certificates />
  </WebRole>
  <WebRole name="PlatformWebRole" vmsize="ExtraSmall">
    <LocalResources>
      <LocalStorage name="DiagnosticStore" sizeInMB="4096" cleanOnRoleRecycle="false" />
    </LocalResources>
    <ConfigurationSettings>
      <Setting name="AccountKey" />
      <Setting name="AccountName" />
      <Setting name="BaseUri" />
      <Setting name="Mode" />
      <Setting name="ProviderName" />
      <Setting name="StorageConnectionString" />
      <Setting name="UseAsyncMethods" />
      <Setting name="UseHttps" />
    </ConfigurationSettings>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="80" localPort="80" />
      <InputEndpoint name="Https" protocol="https" port="443" certificate="CurtSSL" localPort="443" />
    </Endpoints>
    <Certificates>
      <Certificate name="CurtSSL" storeLocation="LocalMachine" storeName="CA" />
    </Certificates>
  </WebRole>
  <WorkerRole name="FTPServerRole" vmsize="ExtraSmall">
    <LocalResources>
      <LocalStorage name="DiagnosticStore" sizeInMB="4096" cleanOnRoleRecycle="false" />
    </LocalResources>
    <ConfigurationSettings>
      <Setting name="AccountKey" />
      <Setting name="AccountName" />
      <Setting name="BaseUri" />
      <Setting name="Mode" />
      <Setting name="ProviderName" />
      <Setting name="UseAsyncMethods" />
      <Setting name="UseHttps" />
    </ConfigurationSettings>
    <Endpoints>
      <InputEndpoint name="FTP" protocol="tcp" port="21" localPort="21" />
    </Endpoints>
    <Certificates />
  </WorkerRole>
  <WorkerRole name="TaskScheduler" vmsize="ExtraSmall">
    <LocalResources>
      <LocalStorage name="DiagnosticStore" sizeInMB="4096" cleanOnRoleRecycle="false" />
    </LocalResources>
    <ConfigurationSettings>
      <Setting name="AccountKey" />
      <Setting name="AccountName" />
      <Setting name="ProviderName" />
      <Setting name="StorageConnectionString" />
    </ConfigurationSettings>
    <Endpoints>
      <InternalEndpoint name="Endpoint1" protocol="tcp" />
    </Endpoints>
    <Certificates />
  </WorkerRole>
</ServiceDefinition>