@{
    bool failed = ViewBag.failed;
    if (failed == null) {
        failed = false;
    }
    bool generated = ViewBag.generated_forgotten;
    if (generated == null) {
        generated = false;
    }
    Layout = null;
    Admin.Models.Settings settings = ViewBag.settings ?? new Admin.Models.Settings();
}
