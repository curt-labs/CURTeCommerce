<body>
  <div role="main">
    <img src="/Admin/Content/img/login_banner.png" class="banner" alt="Login to your Account" />
    <a href="/Admin/Auth/Forgot" title="Forgot password" class="forgot">Forgot Password</a>
    <form method="post" action="/Admin/Auth/In">
        @if (failed) {
            <span class="error">Failed to log you into the system.</span>
        }
        @if (generated) {
            <span class="error">A new password has been generated and e-mailed to the address tied to your username.</span>
        }
        <label for="username">
            Username<br />
            <input type="text" name="username" class="username" required="required" title="Username is required" />
        </label>
        <label for="password">
            Password<br />
            <input type="password" name="password" class="password" />
        </label>
        <input type="submit" name="btnLogin" class="btnLogin" value="Login" />
        <a href="/Admin/Auth/Forgot" title="Forgot password?">Forgot password?</a>
    </form>
  </div>
  <footer>

  </footer>


  <!-- JavaScript at the bottom for fast page loading -->


  <!-- scripts concatenated and minified via build script -->
  <script defer src="/Admin/Scripts/plugins.js"></script>
  <script defer src="/Admin/Scripts/custom/auth.js"></script>
