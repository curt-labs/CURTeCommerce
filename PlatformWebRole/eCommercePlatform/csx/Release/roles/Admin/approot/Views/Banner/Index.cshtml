@{
    List<Admin.Banner> banners = ViewBag.banners;
    if(banners == null){
        banners = new List<Admin.Banner>();
    }
    
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="/Admin/Content/css/banner.manager.css" rel="stylesheet" type="text/css" />
<span class="title">Banner Management</span>
<a href="/Admin/Banner/Edit/0" title="Add New Banner" class="add">Add Banner</a>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Image</th>
            <th>Link</th>
            <th>Visible</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Admin.Banner banner in banners) {
            <tr>
                <td>@banner.title</td>
                <td>
                    @if (banner.image.Length > 0) {
                        <img src="@banner.image" class="banner" alt="@banner.title" />
                    }
                </td>
                <td>@banner.link</td>
                <td>@((banner.isVisible == 1) ? "Yes" : "No")</td>
                <td>
                    <div class="btn-group">
                        <a href="/Admin/Banner/Edit/@banner.ID" class="btn">Edit</a>
                        <button class="btn dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="/Admin/Banner/Delete/@banner.ID" class="delete">Delete</a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="/Admin/Scripts/custom/banner.manager.js" type="text/javascript"></script>
