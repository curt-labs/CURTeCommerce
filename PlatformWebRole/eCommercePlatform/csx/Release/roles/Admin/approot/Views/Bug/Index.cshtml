@{
    bool failed = ViewBag.failed;
    if(failed == null){
        failed = false;
    }
    
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="/Admin/Content/css/admin_form.css" rel="stylesheet" type="text/css" />
<h2>So you found a bug....</h2>

@if (failed) {
    <p class="error">There was a bug while submitting your bug.....this seems somewhat cyclical.</p>
}
<form method="post" action="/Admin/Bug/Submit" class="admin_form">
    <label for="name">
        Your Name
        <input type="text" name="name" id="name" placeholder="Enter your full name" required="required" title="Name is required" />
    </label>

    <label for="email">
        E-Mail Address
        <input type="email" name="email" id="email" placeholder="Enter your e-mail address" required="required" title="E-Mail address is required" />
    </label>

    <label for="url">
        Page of where the bug occurred
        <input type="url" name="url" id="url" placeholder="http://www.example.com/Random/Page" />
    </label>

    <label for="subject">
        Subject
        <input type="text" name="subject" id="subject" placeholder="Add a title for this bug" />
    </label>

    <label for="desc">
        Description of the Bug<br />
        <textarea rows="10" cols="40" name="desc" id="desc" required="required" title="You must enter a description"></textarea>
    </label>

    <input type="submit" name="btnSubmit" id="btnSubmit" value="Submit" />
</form>
