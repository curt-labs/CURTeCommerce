@{
    EcommercePlatform.Profile author = ViewBag.author;
    ViewBag.Title = "Blog Author - " + author.first + " " + author.last;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="/Content/view_sass/blog.css" rel="stylesheet" type="text/css" />

@Html.Partial("_BlogNavigation")

<div class="content">
    <h2>Blog Author</h2>
    @if (author.image != null && author.image != "") {
        <img src="@author.image" alt="@author.first @author.last" class="authorimg" />
    }
    <h3 class="authorname">@author.first @author.last</h3>
    <p class="biography">@author.bio</p>
</div>